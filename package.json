{
  "name": "hebrew-typing-games",
  "version": "1.0.0",
  "description": "Hebrew typing games with automated testing",
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:game1": "playwright test tests/e2e/game1-runner.spec.js",
    "test:game2": "playwright test tests/e2e/game2-car.spec.js",
    "test:game3": "playwright test tests/e2e/game3-typing.spec.js",
    "test:game4": "playwright test tests/e2e/game4-falling.spec.js",
    "test:game5": "playwright test tests/e2e/game5-balloons.spec.js",
    "test:game6": "playwright test tests/e2e/game6-spaceshooter.spec.js",
    "test:game7a": "playwright test tests/e2e/game7-catcher.spec.js",
    "test:game7b": "playwright test tests/e2e/game7-touchtyping.spec.js",
    "test:game8": "playwright test tests/e2e/game8-bubbles.spec.js",
    "test:index": "playwright test tests/e2e/index.spec.js",
    "test:mobile": "playwright test --grep @mobile",
    "test:report": "playwright show-report",
    "test:install": "playwright install"
  },
  "keywords": ["hebrew", "typing", "games", "education"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}

